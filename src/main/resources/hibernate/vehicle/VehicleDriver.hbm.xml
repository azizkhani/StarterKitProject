<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="true">
	<class name="org.baharan.model.vehicle.VehicleDriver" table="AFC_VehicleDriver"  >
		<id name="id"  column="ID">
			<generator class="sequence" />
		</id>

		<property name="assignDate" 				type="string"				column="assignDate" 		   unique-key="Uniq-Line-Station"			/>
		<property name="description" 				type="string"				column="description" 			unique-key="Uniq-Line-Station"  		/>
	
		<many-to-one name="driver" entity-name="org.baharan.model.personel.Personel"    >
                <column name="DriverId" not-null="true" />
        </many-to-one> 
        <many-to-one name="vehicle" entity-name="org.baharan.model.vehicle.Vehicle"  >
                <column name="VehicleId" not-null="true" />
        </many-to-one> 
       
        
        <property name="createdBy" 				type="java.lang.Integer" 	column="CreatedBy" 				not-null="true" 	update="false"	/>
		<property name="updatedBy" 				type="java.lang.Integer" 	column="UpdatedBy" 				not-null="true" 					/>
		<property name="createdDate" 			type="java.util.Date" 		column="CreatedDate" 			not-null="true" 	update="false"	/>
		<property name="updatedDate" 			type="java.util.Date" 		column="UpdatedDate" 			not-null="true" 					/>
	</class>
</hibernate-mapping>